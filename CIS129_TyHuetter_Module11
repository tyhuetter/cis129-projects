#import json for creating file types
#write the list into the file
SENTINEL = -1
with open('grades.txt', mode='w') as grades:
    student_id = int(input("Enter student's id number, -1 to cancel or stop: "))
    while student_id != -1:
        name = input("Enter the student's name (First and Last): ")
        grade = int(input("Enter a grade: "))
        grades.write(name)
        grades.write(str(grade))
        student_id = int(input("Enter student's id number, -1 to cancel or stop: "))


with open('grades.txt', mode='r') as grades:
    grade_counter = 0
    total = 0
    for record in grades:
        grade_counter += 1
        total += grade
        record.split(name, grade)
        print(grades)
    average = total / grade_counter
    print(total, grade_counter, average)
