
#write the list into the file
student_id = 0
grade_counter = 0
grade = 0
total = 0
average = 0
with open('grades.txt', mode='a+') as grades:
    student_id = int(input("Enter student's id number, -1 to cancel or stop: "))
    while student_id != -1:
        name = input("Enter the student's name (First and Last): ")
        grade = int(input("Enter a grade: "))
        grade_counter += 1
        grade_book = str(grade_counter) + name + str(grade)
        grades.write(grade_book)
        student_id = int(input("Enter student's id number, -1 to cancel or stop: "))
    if grade_counter != 0:
        total += grade
        average = total / grade_counter

with open('grades.txt', mode='r') as grades:
    print(f'{"Counter":<10}{"Name":<20}{"Grade":<10}')
    for record in grades:
        grade_book = record.split()
        print(f'{grade_counter:<10}{name:<20}{grade:<10}')


    
    
    

    
                   
               
    
